# Local development environment variables for testing
# Copy this to .env.local and fill in your actual values

# DodoPayments Configuration
DODO_PAYMENTS_API_KEY=your_dodo_api_key_here
DODO_WEBHOOK_KEY=your_webhook_secret_key_here
DODO_API_BASE_URL=https://api.dodopayments.com

# DodoPayments Product IDs (get these from your dashboard)
# For testing, you can use dummy values like "test_standard_id"
DODO_STANDARD_PRODUCT_ID=test_standard_id
DODO_PRO_PRODUCT_ID=test_pro_id  
DODO_LIFETIME_PRODUCT_ID=test_lifetime_id

# Application URLs
BASE_URL=http://localhost:3000
VERCEL_URL=http://localhost:3000

# Firebase Configuration (if using)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"}
